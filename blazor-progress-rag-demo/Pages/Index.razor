@page "/"

<div class="k-min-h-screen k-d-flex k-flex-col k-bg-app-surface"
    style="background: radial-gradient(circle at 50% 30%, rgba(99, 102, 241, 0.15) 0%, transparent 50%), radial-gradient(circle at 50% 70%, rgba(59, 130, 246, 0.15) 0%, transparent 50%);">

    @* Header *@
    <header class="k-d-flex k-align-items-center k-px-6 k-py-4 k-bg-surface k-border-b k-border-solid k-border-border">
        <div class="k-d-flex k-align-items-center k-gap-3">
            <img src="https://www.progress.com/assets/images/icons/progress-mark-icon.svg" alt="Progress Logo"
                style="width: 32px; height: 32px;" />
            <h1 class="k-h6 !k-m-0">Progress Agentic RAG + Telerik DevTools</h1>
        </div>
    </header>

    @* Hero Section *@
    <section class="k-d-flex k-flex-col k-align-items-center k-justify-content-center k-flex-1 k-py-24 k-px-4">
        <div class="k-d-flex k-flex-col k-align-items-center k-gap-6 k-text-center k-w-full" style="max-width: 1200px;">

            @* Gradient Title *@
            <div class="k-d-flex k-flex-col k-gap-4 k-align-items-center">
                <h2 class="k-display-1 !k-m-0"
                    style="background: linear-gradient(135deg, #6366F1 0%, #3B82F6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-size: 4rem; font-weight: 700; line-height: 1.2;">
                    Supercharging<br />AI-Powered Applications
                </h2>
                <p class="k-font-size-lg k-color-subtle !k-m-0" style="max-width: 900px;">
                    Build AI-powered apps that look great, are easy to use, and rely on accurate, trustworthy data—so
                    they deliver real value where it counts.
                </p>
            </div>

            @* Input Section *@
            <div class="k-mt-8" style="width: 100%; max-width: 675px;">
                <TelerikTextBox @bind-Value="@SearchQuery"
                    Placeholder="Ask about features, deployment, security, integrations..." ShowPrefixSeparator="true"
                    ShowSuffixSeparator="false" Class="k-rounded-lg k-border-2"
                    Size="@ThemeConstants.TextBox.Size.Large">
                    <TextBoxPrefixTemplate>
                        <TelerikButton Icon="@SvgIcon.Plus" FillMode="@ThemeConstants.Button.FillMode.Flat"
                            ThemeColor="@ThemeConstants.Button.ThemeColor.Primary"
                            Size="@ThemeConstants.Button.Size.Medium" Title="Add" AriaLabel="Add">
                        </TelerikButton>
                    </TextBoxPrefixTemplate>
                    <TextBoxSuffixTemplate>
                        <div class="k-d-flex k-align-items-center k-gap-2">
                            <TelerikButton Icon="@SvgIcon.MicrophoneOutline"
                                FillMode="@ThemeConstants.Button.FillMode.Flat"
                                ThemeColor="@ThemeConstants.Button.ThemeColor.Primary"
                                Size="@ThemeConstants.Button.Size.Medium" Title="Voice Input" AriaLabel="Voice Input">
                            </TelerikButton>
                            <TelerikButton Icon="@SvgIcon.ArrowUp" FillMode="@ThemeConstants.Button.FillMode.Solid"
                                ThemeColor="@ThemeConstants.Button.ThemeColor.Primary"
                                Size="@ThemeConstants.Button.Size.Medium" Rounded="@ThemeConstants.Button.Rounded.Full"
                                Title="Send" AriaLabel="Send" OnClick="@HandleSearch">
                            </TelerikButton>
                        </div>
                    </TextBoxSuffixTemplate>
                </TelerikTextBox>
            </div>

            @* Demo Cards Section *@
            <div class="k-d-flex k-flex-col k-align-items-center k-gap-8 k-mt-12 k-w-full">
                <h3 class="k-h5 !k-m-0">Explore Demos</h3>

                <div class="k-d-flex k-flex-row k-gap-8 k-justify-content-center k-flex-wrap">

                    @* AI Search Pill *@
                    <a href="/ai-search"
                        class="k-text-decoration-none k-border k-border-solid k-border-white k-rounded-xl k-p-[13px] k-d-flex k-align-items-center k-gap-[10px] k-cursor-pointer pill-card"
                        style="background: rgba(255,255,255,0.7);">
                        <div class="k-w-12 k-h-12 k-rounded-md k-d-flex k-align-items-center k-justify-content-center"
                            style="background: rgba(229, 182, 217, 0.6);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                fill="none">
                                <path
                                    d="M7 7L5 9L7 11M11 11L13 9L11 7M19 19L14.7 14.7M17 9C17 13.4183 13.4183 17 9 17C4.58172 17 1 13.4183 1 9C1 4.58172 4.58172 1 9 1C13.4183 1 17 4.58172 17 9Z"
                                    stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <span class="k-font-size-lg k-text-black k-white-space-nowrap">AI Search</span>
                    </a>

                    @* Financial Analysis Pill *@
                    <a href="/financial-analysis"
                        class="k-text-decoration-none k-border k-border-solid k-border-white k-rounded-xl k-p-[13px] k-d-flex k-align-items-center k-gap-[10px] k-cursor-pointer pill-card"
                        style="background: rgba(255,255,255,0.7);">
                        <div class="k-w-12 k-h-12 k-rounded-md k-d-flex k-align-items-center k-justify-content-center"
                            style="background: rgba(165, 230, 180, 0.6);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                fill="none">
                                <path
                                    d="M10 5C11.1046 5 12 4.10457 12 3C12 1.89543 11.1046 1 10 1C8.89543 1 8 1.89543 8 3C8 4.10457 8.89543 5 10 5ZM10 5V9M3 9H17C18.1046 9 19 9.89543 19 11V17C19 18.1046 18.1046 19 17 19H3C1.89543 19 1 18.1046 1 17V11C1 9.89543 1.89543 9 3 9Z"
                                    stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <span class="k-font-size-lg k-text-black k-white-space-nowrap">Financial Analysis</span>
                    </a>

                    @* Knowledge Assistant Pill *@
                    <a href="/knowledge-assistant"
                        class="k-text-decoration-none k-border k-border-solid k-border-white k-rounded-xl k-p-[13px] k-d-flex k-align-items-center k-gap-[10px] k-cursor-pointer pill-card"
                        style="background: rgba(255,255,255,0.7);">
                        <div class="k-w-12 k-h-12 k-rounded-md k-d-flex k-align-items-center k-justify-content-center"
                            style="background: rgba(174, 210, 247, 0.6);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                fill="none">
                                <path
                                    d="M10 5C11.1046 5 12 4.10457 12 3C12 1.89543 11.1046 1 10 1C8.89543 1 8 1.89543 8 3C8 4.10457 8.89543 5 10 5ZM10 5V9M3 9H17C18.1046 9 19 9.89543 19 11V17C19 18.1046 18.1046 19 17 19H3C1.89543 19 1 18.1046 1 17V11C1 9.89543 1.89543 9 3 9Z"
                                    stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <span class="k-font-size-lg k-text-black k-white-space-nowrap">Knowledge Assistant</span>
                    </a>

                    @* Agentic RAG Value Pill *@
                    <a href="/agentic-rag-value"
                        class="k-text-decoration-none k-border k-border-solid k-border-white k-rounded-xl k-p-[13px] k-d-flex k-align-items-center k-gap-[10px] k-cursor-pointer pill-card"
                        style="background: rgba(255,255,255,0.7);">
                        <div class="k-w-12 k-h-12 k-rounded-md k-d-flex k-align-items-center k-justify-content-center"
                            style="background: rgba(245, 177, 99, 0.6);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                fill="none">
                                <path
                                    d="M10 5C11.1046 5 12 4.10457 12 3C12 1.89543 11.1046 1 10 1C8.89543 1 8 1.89543 8 3C8 4.10457 8.89543 5 10 5ZM10 5V9M3 9H17C18.1046 9 19 9.89543 19 11V17C19 18.1046 18.1046 19 17 19H3C1.89543 19 1 18.1046 1 17V11C1 9.89543 1.89543 9 3 9Z"
                                    stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <span class="k-font-size-lg k-text-black k-white-space-nowrap">Agentic RAG Value</span>
                    </a>

                </div>
            </div>
        </div>
    </section>

    @* Footer *@
    <footer
        class="k-d-flex k-justify-content-center k-py-6 k-px-4 k-bg-surface k-border-t k-border-solid k-border-border">
        <p class="k-font-size-sm k-color-subtle !k-m-0 k-text-center">
            Copyright © 2025 Progress Software. All rights reserved. Progress® AI Powered
        </p>
    </footer>

</div>

<style>
    .pill-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .pill-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.2);
        background: rgba(255, 255, 255, 0.9) !important;
    }
</style>

@code {
    private string SearchQuery { get; set; } = string.Empty;

    private void HandleSearch()
    {
        if (!string.IsNullOrWhiteSpace(SearchQuery))
        {
            // Handle search logic here
            Console.WriteLine($"Searching for: {SearchQuery}");
        }
    }
}