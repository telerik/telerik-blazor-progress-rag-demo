<button @onclick="OnClick" disabled="@Disabled" class="search-pill">
    @Text
</button>

@code {
    [Parameter]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public bool Disabled { get; set; } = false;
}
